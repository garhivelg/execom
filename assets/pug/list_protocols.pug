extends list.pug

block panel_head
  | Протоколы

block table_headers
  thead
    tr
      th(class="col-md-1 col-lg1 col-sm-1")
      th
        | {%if order_id==1%}
        a(href="?order=1{% if not desc %}&desc={{desc}}{% endif %}") 
          | Протокол
          i(class="fa fa-chevron-{% if desc %}up{% else %}down{% endif %} pull-right")
        | {%else%}
        a(href="?order=1") 
          | Протокол
          i(class="fa fa-arrows-v pull-right")
        | {%endif%}
      th
        | {%if order_id==2%}
        a(href="?order=2{% if not desc %}&desc={{desc}}{% endif %}") 
          | №
          i(class="fa fa-chevron-{% if desc %}up{% else %}down{% endif %} pull-right")
        | {%else%}
        a(href="?order=2") 
          | №
          i(class="fa fa-arrows-v pull-right")
        | {%endif%}
      th
        | {%if order_id==3%}
        a(href="?order=3{% if not desc %}&desc={{desc}}{% endif %}") 
          | Дата 
          i(class="fa fa-chevron-{% if desc %}up{% else %}down{% endif %} pull-right")
        | {%else%}
        a(href="?order=3") 
          | Дата 
          i(class="fa fa-arrows-v pull-right")
        | {%endif%}
      th
        | {%if order_id==4%}
        a(href="?order=4{% if not desc %}&desc={{desc}}{% endif %}") 
          | Опись 
          i(class="fa fa-chevron-{% if desc %}up{% else %}down{% endif %} pull-right")
        | {%else%}
        a(href="?order=4") 
          | Опись 
          i(class="fa fa-arrows-v pull-right")
        | {%endif%}
      th
        | {%if order_id==5%}
        a(href="?order=5{% if not desc %}&desc={{desc}}{% endif %}") 
          | Дело 
          i(class="fa fa-chevron-{% if desc %}up{% else %}down{% endif %} pull-right")
        | {%else%}
        a(href="?order=5") 
          | Дело 
          i(class="fa fa-arrows-v pull-right")
        | {%endif%}

block row_controls
  td
    center
      div(class="btn-group btn-group-xs")
        a(href="{{ url_for('edit_protocol', protocol_id=i.id) }}", class="btn btn-sm btn-primary" data-toggle="tooltip", title="Просмотреть")
          i(class="fa fa-search")
        a(href="{{ url_for('edit_protocol', protocol_id=i.id) }}", class="btn btn-sm btn-primary" data-toggle="tooltip", title="Редактировать")
          i(class="fa fa-edit")
        a(data-href="{{ url_for('edit_protocol', protocol_id=i.id) }}", class="btn btn-sm btn-primary confirm" data-toggle="modal", title="Удалить", data-text="Вы уверены, что хотите удалить эту запись?", data-target="#confirm-del")
          i(class="fa fa-eraser")

block row_data
  td {{ i }}  
  td {{ i.protocol_id }}  
  td {{ i.protocol_date.strftime("%d %b %Y") }}  
  td {{ i.case.register }}  
  td {{ i.case.book_num }}  
