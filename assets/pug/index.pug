doctype html
html
  head
    meta(charset="UTF-8")
    title Приватизация{% if title %} - {{title}}{% endif %}
    link(rel="icon", href="{{ url_for('static', filename='favicon/favicon.ico') }}")
    link(href="{{ url_for('static', filename='css/bootstrap.min.css') }}", rel="stylesheet")
    link(href="{{ url_for('static', filename='css/main.css') }}", rel="stylesheet")
  body
    nav(class="navbar navbar-inverse navbar-fixed-top")
      div(class="container")
        div(class="navbar-header")
          button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
            span(class="sr-only") Toggle navigation
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")
          a(class="navbar-brand", href="/") Исполком
        div(id="navbar", class="navbar-collapse collapse")
          ul(class="nav navbar-nav")
            li
              a(href="{{ url_for('list_protocols') }}") Список
            li
              a(href="{{ url_for('edit_case') }}") Добавить
            li(class="dropdown")
              a(href="#", class="dropdown-toggle", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false") Справочники <span class="caret"></span>
              ul(class="dropdown-menu")
                li
                  a(href="{{ url_for('list_registers') }}") Описи
                li
                  a(href="{{ url_for('list_cases') }}") Дела
    | {% with messages = get_flashed_messages() %}
    |   {% for message in messages %}
    div(class="alert alert-info")
      | {{ message }}
    |   {% endfor %}
    | {% endwith %}

    div(class="row")
      div(class="col-md-12")
        | {% block content %}{% endblock %}
    
    script(src="{{ url_for('static', filename='js/jquery.min.js') }}")
    script(src="{{ url_for('static', filename='js/bootstrap.min.js') }}")
    script(type="text/javascript")
      | $(function() {
      |   $('#filterClick').bind('click', function() {
      |     $('#filter').toggle();
      |   });
      | });
    | {% block script %}{% endblock %}
